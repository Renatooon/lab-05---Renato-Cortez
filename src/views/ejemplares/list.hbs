                <a class="nav-link link-light" aria-current="page" href="/ejemplares/add">Nuevo Ejemplar</a>
            </button>
        </div>

        <table class="table text-center">
            <thead>
                <tr class="table-dark">
                    <th scope="col" class="col-2">ID Libro</th>
                    <th scope="col">ID Pr√©stamo</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each ejemplares}}
                <tr>
                    <td>{{this.libro_id_libro}}</td>
                    <td>{{this.Prestamo_id_prestamo}}</td>
